import numpy as np

# Sample data: Daily temperatures in a city (in degrees Celsius)
temperatures = np.array([
    15, 16, 15, 14, 17, 20, 21, 22, 19, 16, 15, 18, 
    20, 22, 23, 24, 25, 22, 21, 20, 19, 18, 16, 15, 
    30, 32, 31, 29, 28, 27  # Assume 6 extra high values to simulate outliers
])

# Calculate the variance of daily temperatures
variance = np.var(temperatures, ddof=0)  # Population variance (ddof=0)
print("Variance of daily temperatures:", variance)

# Calculate the Interquartile Range (IQR) to identify outliers
Q1 = np.percentile(temperatures, 25)  # 25th percentile
Q3 = np.percentile(temperatures, 75)  # 75th percentile
IQR = Q3 - Q1

# Define the threshold for outliers
lower_bound = Q1 - 1.5 * IQR
upper_bound = Q3 + 1.5 * IQR

# Identify potential outliers
outliers = temperatures[(temperatures < lower_bound) | (temperatures > upper_bound)]

# Print the results
print("Interquartile Range (IQR):", IQR)
print("Lower bound for outliers:", lower_bound)
print("Upper bound for outliers:", upper_bound)
print("Potential outliers:", outliers)
